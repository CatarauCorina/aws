{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Template to launch an Amazon Linux instance.",
    "Mappings": {
        "RegionMap": {
            "ap-northeast-1": {
                "AMI": "ami-39b23d38"
            },
            "ap-southeast-1": {
                "AMI": "ami-fade91a8"
            },
            "ap-southeast-2": {
                "AMI": "ami-d16bfbeb"
            },
            "eu-west-1": {
                "AMI": "ami-c7c0d6b3"
            },
            "sa-east-1": {
                "AMI": "ami-5253894f"
            },
            "us-east-1": {
                "AMI": "ami-05355a6c"
            },
            "us-west-1": {
                "AMI": "ami-3ffed17a"
            },
            "us-west-2": {
                "AMI": "ami-0358ce33"
            }
        }
    },
    "Resources": {
        "Ec2Instance1": {
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "AMI"
                    ]
                },
                "InstanceType": "m1.large"
            },
            "Type": "AWS::EC2::Instance"
        }
    }
}
